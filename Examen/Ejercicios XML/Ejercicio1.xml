            <nombre>Pepe</nombre>
            <sueldo>2.000€</sueldo>
        </empleado>
        <empleado p="tecnico"><!--Repito el nombre de la etiqueta "empleado" ya que en XML si que se puede-->
            <nombre>Fernando</nombre>
            <sueldo>1.500€</sueldo>
        </empleado>
    </departamento>
    <departamento><!--Creo la tabla del segundo departamento-->
